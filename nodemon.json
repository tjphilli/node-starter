{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules"
  ],
  "verbose": true,
  "execMap": {
    "js": "node --harmony"
  },
  "watch": [
    "posts.js",
    "app.js",
    "controllers/*.js",
    "views/**/*.*"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js json jade"
}